zstyle ':zrc:config'      dir           "$ZDOTDIR/conf.d"
zstyle ':zrc:completion'  compdump      "$XDG_CACHE_HOME/zsh/zcompdump"
zstyle ':zrc:completion'  compstyle     "zrc"
zstyle ':zrc:editor'      key-bindings  "emacs"
zstyle ':zrc:editor'      wordchars     "" # Only alphanumerical characters make up words.
zstyle ':zrc:functions'   dir           "$ZDOTDIR/functions"
zstyle ':zrc:history'     file          "$XDG_DATA_HOME/zsh/zsh_history"
zstyle ':zrc:homebrew'    use-cache     "yes"
zstyle ':zrc:lib'         dir           "$ZDOTDIR/lib"
zstyle ':zrc:plugins'     dir           "$ZDOTDIR/plugins"
zstyle ':zrc:prompt'      theme         "starship cockpit"
zstyle ':zrc:themes'      dir           "$ZDOTDIR/themes"
zstyle ':antidote:home'   dir           "$XDG_DATA_HOME/antidote"
zstyle ':antidote:bundle' file          "$ZDOTDIR/zsh_plugins.txt"
zstyle ':antidote:*'      zcompile      "yes"
zstyle ':antidote:bundle' use-friendly-names "yes"
